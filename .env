# Environment variables for Docker Compose

# PostgreSQL
POSTGRES_USER=aigualba_db
POSTGRES_PASSWORD=aigualba_pass
POSTGRES_DB=water_system

# Development overrides
DEV_POSTGRES_USER=devuser
DEV_POSTGRES_PASSWORD=devpass
DEV_POSTGRES_DB=aigualba_db

# Backend
DATABASE_URL=postgresql://aigualba_db:aigualba_pass@db:5432/water_system
DEV_DATABASE_URL=postgresql://devuser:devpass@db:5432/aigualba_db

# Frontend
BACKEND_URL=http://backend:8000
DEV_BACKEND_URL=http://backend:8001